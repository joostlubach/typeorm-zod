{
  "name": "typeorm-zod",
  "description": "Zod based validation & metadata for TypeORM entities",
  "version": "1.0.0",
  "author": "Joost Lubach <joostlubach@gmail.com>",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "module": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:tsc",
    "build:tsc": "pnpm build:tsc:esm && pnpm build:tsc:cjs",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module es2022 --outDir dist/esm --declarationDir dist/types",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module commonjs --outDir dist/cjs --declaration false --declarationMap false",
    "clean": "rimraf dist",
    "lint": "eslint src --ext ts,tsx",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "@types/pluralize": "^0.0.33",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "casing": "^1.1.0",
    "chalk": "^3.0.0",
    "jest": "^30.2.0",
    "lodash": "^4.17.21",
    "pluralize": "^8.0.0",
    "typeorm": "^0.3.26",
    "ytil": "workspace:^",
    "zod": "^4.1.5"
  }
}